<h1><%= @task.title %></h1>
<p> <%= @task.details %></p>
<p><% if @task.completed %>
<p>The task is completed</p>
<% else %>
<p>The task is not yet completed</p>
<% end %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to homepage", tasks_path %>
